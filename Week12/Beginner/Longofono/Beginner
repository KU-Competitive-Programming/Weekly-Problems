import java.util.Scanner;
public class weekly1_beginner {
	public static void main(String[] args) {
		Scanner io = new Scanner(System.in);
		int keyNum;
		String phrase;
		String phraseOut = "";
		int difference;
		System.out.println("Enter a cipher key (integer): ");
		keyNum = io.nextInt();
		io.nextLine();
		System.out.println("Enter your phrase: ");
		phrase = io.next().toLowerCase();
		
		for(int i = 0; i<phrase.length(); i++){
			if(phrase.charAt(i)>0&&phrase.charAt(i)<97){
				//do nothing, here to catch the funky behavior when non-alphabet chars change to lowercase
			}
			else if((int)phrase.charAt(i)+keyNum>122){
				difference = (keyNum + (int)phrase.charAt(i))-122;
				phraseOut += (char)(96+difference);
			}
			else{
				phraseOut += (char)(phrase.charAt(i)+keyNum);
			}
		}
		System.out.println(phraseOut);
	}
}
